<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesEdit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/arrowpointingleft"
                    android:onClick="adminBack"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ser_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Service Name" />

                <EditText
                    android:id="@+id/ser_servicename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Service's name" />

                <TextView
                    android:id="@+id/ser_servicestate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Service State" />

                <RadioGroup
                    android:id="@+id/servicechoicestate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/ser_activate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activate" />

                    <RadioButton
                        android:id="@+id/ser_disable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Disable" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="Choose the needed requirement for the service"
                    android:textSize="16dp"></TextView>

                <CheckBox
                    android:id="@+id/ser_licensetype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="License Type" />

                <CheckBox
                    android:id="@+id/ser_idnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID number" />

                <CheckBox
                    android:id="@+id/ser_proofofstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proof of status" />

                <CheckBox
                    android:id="@+id/ser_proofofresidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proof of residence" />

                <CheckBox
                    android:id="@+id/ser_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adress" />

                <CheckBox
                    android:id="@+id/ser_dateofbirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of birth" />

                <CheckBox
                    android:id="@+id/ser_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name" />

                <CheckBox
                    android:id="@+id/ser_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name" />

                <Button
                    android:id="@+id/editdone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>