<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceInfoGather">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="takeHome"
                android:text="home" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Service"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Please type the needed informations"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/ser1_fn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First name" />

                <EditText
                    android:id="@+id/ser1_ln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last name" />

                <EditText
                    android:id="@+id/ser1_db"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of birth"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/ser1_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address" />

                <EditText
                    android:id="@+id/ser1_pr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Proof of residence" />

                <EditText
                    android:id="@+id/ser1_ps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Proof of status" />

                <EditText
                    android:id="@+id/ser1_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ID number"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/ser1_dv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Driver's license type" />

                <Button
                    android:id="@+id/active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>