<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Private_my_hours">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="688dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logO"
                    android:layout_width="113dp"
                    android:layout_height="102dp"
                    android:onClick="logoff"
                    android:text="LOGOUT"
                    android:translationX="10dp"
                    android:translationY="10dp" />

                <Button
                    android:id="@+id/home2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:onClick="home2"
                    android:text="HOME"
                    android:translationX="150dp"
                    android:translationY="-90dp" />

                <Button
                    android:id="@+id/Veiwhrsbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="94dp"
                    android:onClick="taketoviewhours"
                    android:text="VIEW HOURS"
                    android:translationX="270dp"
                    android:translationY="-190dp" />

                <TextView
                    android:id="@+id/editHrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="EDIT HOURS"
                    android:textColor="#0C0C0C"
                    android:textSize="18sp"
                    android:translationY="-170dp" />

                <TextView
                    android:id="@+id/mondayTag"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:gravity="center|start"
                    android:hint="  "
                    android:text="Monday:"
                    android:textColor="#040404"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-150dp" />

                <EditText
                    android:id="@+id/mondayText"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-200dp" />

                <EditText
                    android:id="@+id/tuesdayText"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-190dp" />

                <TextView
                    android:id="@+id/tuesdayTag"
                    android:layout_width="106dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:text="Tuesday:"
                    android:textColor="#0B0B0B"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-230dp" />

                <EditText
                    android:id="@+id/wednesdayText"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-230dp" />

                <TextView
                    android:id="@+id/wednesdayTag"
                    android:layout_width="108dp"
                    android:layout_height="37dp"
                    android:gravity="center|start"
                    android:text="Wednesday:"
                    android:textColor="#050505"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-270dp" />

                <EditText
                    android:id="@+id/thursdayText"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-261dp" />

                <TextView
                    android:id="@+id/thursdayTag"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="Thursday:"
                    android:textColor="#0C0C0C"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-310dp" />

                <EditText
                    android:id="@+id/fridayText"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-300dp" />

                <TextView
                    android:id="@+id/fridayTag"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:text="Friday:"
                    android:textColor="#090909"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-340dp" />

                <TextView
                    android:id="@+id/saturdayTag"
                    android:layout_width="115dp"
                    android:layout_height="48dp"
                    android:gravity="center|start"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:text="Saturday:"
                    android:textColor="#050505"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-330dp" />

                <EditText
                    android:id="@+id/saturdayText"
                    android:layout_width="259dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-378dp" />

                <EditText
                    android:id="@+id/sundayText"
                    android:layout_width="259dp"
                    android:layout_height="55dp"
                    android:ems="10"
                    android:hint="i.e 9am-5pm or CLOSED"
                    android:inputType="textPersonName"
                    android:translationX="130dp"
                    android:translationY="-370dp" />

                <TextView
                    android:id="@+id/sundayTag"
                    android:layout_width="115dp"
                    android:layout_height="47dp"
                    android:gravity="center|start"
                    android:text="Sunday:"
                    android:textColor="#0C0C0C"
                    android:textSize="18sp"
                    android:translationX="0dp"
                    android:translationY="-430dp" />

                <Button
                    android:id="@+id/doneBTN"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="DONE"
                    android:translationX="150dp"
                    android:translationY="-390dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>