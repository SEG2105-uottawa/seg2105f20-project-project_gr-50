<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Private_my_services">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/log_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logO"
            android:text="LOGOUT" />

        <Button
            android:id="@+id/view_activated_service1"
            android:layout_width="208dp"
            android:layout_height="58dp"
            android:onClick="take_to_view_my_activatedServices"
            android:text="VIEW ACTIVATED SERVICE"
            android:translationX="200dp"
            android:translationY="0dp" />

        <Button
            android:id="@+id/home1"
            android:layout_width="162dp"
            android:layout_height="63dp"
            android:onClick="home1"
            android:text="HOME"
            android:translationY="-55dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Click the services to activate"
            android:textSize="20sp"
            android:translationY="-30dp" />

        <ListView
            android:id="@+id/employee_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-30dp" />

    </LinearLayout>
</RelativeLayout>